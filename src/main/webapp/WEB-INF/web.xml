<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>GetListEmployeeServlet</servlet-name>
        <servlet-class>com.example.csw_clients.controller.GetListEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetListEmployeeServlet</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateEmployeeServlet</servlet-name>
        <servlet-class>com.example.csw_clients.controller.CreateEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateEmployeeServlet</servlet-name>
        <url-pattern>/employees/store</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateEmployeeServlet</servlet-name>
        <servlet-class>com.example.csw_clients.controller.UpdateEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateEmployeeServlet</servlet-name>
        <url-pattern>/employees/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <servlet-class>com.example.csw_clients.controller.DeleteEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteEmployeeServlet</servlet-name>
        <url-pattern>/employees/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetDetailEmployeeServlet</servlet-name>
        <servlet-class>com.example.csw_clients.controller.GetDetailEmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetDetailEmployeeServlet</servlet-name>
        <url-pattern>/employees/detail</url-pattern>
    </servlet-mapping>
</web-app>